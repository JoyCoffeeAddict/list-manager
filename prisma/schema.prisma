generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model ListItem {
    id             String  @id @default(cuid())
    name           String
    initialChecked Boolean @default(false)
    authorId       String
    list           List    @relation(fields: [listId], references: [id])
    listId         String

    @@index([listId])
}

model List {
    id String @id @default(cuid())

    authorId String

    items ListItem[]
}
